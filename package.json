{
  "name": "ecommerce",
  "version": "1.0.0",
  "description": "eccommerce challenge",
  "main": "server.ts",
  "scripts": {
    "start": "NODE_ENV=production node build/server.js",
    "build": "rimraf ./build && tsc",
    "start:dev": "nodemon",
    "test": "jest --coverage --forceExit --detectOpenHandles  --runInBand --passWithNoTests",
    "test:integration": "yarn build && jest --coverage --forceExit --detectOpenHandles  --runInBand",
    "tsc": "tsc --noEmit",
    "lint": "eslint '*/**/*.ts'",
    "lint:f": "eslint --fix '*/**/*.ts'",
    "coverage": "nyc --reporter cobertura jest",
    "sequelize": "./node_modules/.bin/sequelize $*",
    "db:drop": "npx sequelize db:drop",
    "db:seed": "npx sequelize db:seed",
    "db:migrate": "npx sequelize db:migrate",
    "db:reset": "npm run sequelize db:drop",
    "db:create": "npm run sequelize db:create",
    "db:reset:migrate": "npm run db:reset && npm run db:create && npm run db:migrate",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/frankhn/bemeliorism_challenge.git"
  },
  "keywords": [
    "bemeliorism"
  ],
  "author": "frankhn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/frankhn/bemeliorism_challenge/issues"
  },
  "homepage": "https://github.com/frankhn/bemeliorism_challenge#readme",
  "dependencies": {
    "app-root-path": "^3.0.0",
    "bcryptjs": "2.4.3",
    "celebrate": "^12.1.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "faker": "^5.1.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "morgan": "^1.10.0",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.6.5",
    "swagger-ui-express": "^4.1.5",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.18.9",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.9",
    "@types/faker": "^5.1.5",
    "@types/jest": "^28.1.6",
    "@types/lodash": "^4.14.168",
    "@types/moment": "^2.13.0",
    "@types/node": "^18.0.6",
    "@types/sequelize": "^4.28.9",
    "@types/supertest": "^2.0.10",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "conventional-changelog-conventionalcommits": "^4.6.3",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "nodemon": "^2.0.6",
    "nyc": "^15.1.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "sequelize-cli": "^6.2.0",
    "supertest": "^6.2.2",
