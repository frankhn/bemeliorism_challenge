{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "./types"
    ],
    "types": [
      "node"
    ]
  },
  "lib": [
    "es2020"
  ],
  "include": [
    "src/**/*.ts",
    "*.ts",
    ".eslintrc.js",
    "commitlint.config.js",
    "*.js"
  ],
  "exclude": [
    "build",
    "node_modules",
  ],
}